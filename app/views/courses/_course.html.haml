-# .max-w-xl.mx-auto.py-16.px-4.sm:py-24.sm:px-6.lg:max-w-7xl.lg:px-8

.grid.grid-cols-1.w-full.sm:px-2
  .group.relative.bg-white.border.border-gray-200.rounded-lg.flex.flex-col.overflow-hidden
    .aspect-w-3.aspect-h-4.bg-gray-200.group-hover:opacity-75.sm:aspect-none.sm:h-96
      - if course.course_image.attached?
        = image_tag course.course_image, class: " w-full h-full object-center object-cover sm:w-full sm:h-full", alt: course.description
      - else 
        %img.w-full.h-full.object-center.object-cover.sm:w-full.sm:h-full{alt: "Eight shirts arranged on table in black, olive, grey, blue, white, red, mustard, and green.", src: "https://images.unsplash.com/photo-1592659762303-90081d34b277?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2273&q=80"}/


    .flex-1.p-4.space-y-2.flex.flex-col
      %h3.text-sm.font-medium.text-gray-900
        = link_to course_path(course) do
          %span.absolute.inset-0{"aria-hidden" => "true"}
          .text-lg.font-semibold.text-cyan-700= course.name
          .text-sm.font-extralight= course.user.email
      %p.text-sm.text-gray-500 
        = course.description
      .flex-1.flex.flex-col.justify-end
        %p.text-sm.italic.text-sky-600 Learn More
  
