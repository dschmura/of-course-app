%div{id: "#{dom_id course}"}
  %p.my-5
    %strong.block.font-medium.mb-1 Title:
    = course.name
  %p.my-5
    %strong.block.font-medium.mb-1 User:
    = course.user_id
  - if action_name != "show"
    = link_to "Show this course", user_course_path(@user, course), class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium"
    = link_to 'Edit this course', edit_user_course_path(@user, course), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium"
    %hr.mt-6/
